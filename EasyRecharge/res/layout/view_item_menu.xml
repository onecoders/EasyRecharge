<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/menu_icon"
        android:layout_width="@dimen/main_menu_side"
        android:layout_height="@dimen/main_menu_side"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/main_menu_icon_margin"
        android:contentDescription="@string/contentDescription" />

    <TextView
        android:id="@+id/menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/main_menu_title_margin"
        android:layout_marginTop="@dimen/main_menu_title_margin"
        android:gravity="center"
        android:textColor="@drawable/text_color"
        android:textSize="@dimen/main_menu_title_txt" />

</LinearLayout>
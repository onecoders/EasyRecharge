<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/reuslt_txt_margin"
        android:gravity="center"
        android:text="@string/txt_bind_success"
        android:textColor="@color/green"
        android:textSize="@dimen/bind_success_txt" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/reuslt_txt_margin"
        android:text="@string/txt_bind_info"
        android:textSize="@dimen/bind_info_hint" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_view_rounded_top"
        android:orientation="vertical"
        android:padding="@dimen/container_padding" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/txt_key_padding_left"
            android:text="@string/txt_school"
            android:textSize="@dimen/result_txt_key" />

        <TextView
            android:id="@+id/rb_school_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/green"
            android:textSize="@dimen/result_txt_value" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_view_rounded_middle"
        android:orientation="vertical"
        android:padding="@dimen/container_padding" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/txt_key_padding_left"
            android:text="@string/txt_apart"
            android:textSize="@dimen/result_txt_key" />

        <TextView
            android:id="@+id/rb_apart_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/green"
            android:textSize="@dimen/result_txt_value" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_view_rounded_bottom"
        android:orientation="vertical"
        android:padding="@dimen/container_padding" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/txt_key_padding_left"
            android:text="@string/txt_room"
            android:textSize="@dimen/result_txt_key" />

        <TextView
            android:id="@+id/rb_room_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/green"
            android:textSize="@dimen/result_txt_value" />
    </LinearLayout>

    <Button
        android:id="@+id/rb_btn_confirm"
        style="@style/btnStyleAcapulco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/btn_margin"
        android:text="@string/confirm_exit" />

</LinearLayout>